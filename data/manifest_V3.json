{
    "manifest_version": 3,
    "name": "Proyecta UTCH",
    "description": "Aplicación que permite a los alumnos de la Universidad Tecnológica de Chihuahua consultar su información",
    "version": "1.0.1",
    "action": {
        "default_popup": "popup.html",
        "default_icon": "favicon-16.png"
    },
    "icons": {
        "16": "favicon-16.png",
        "48": "favicon-48.png",
        "128": "favicon-128.png"
    },
    "host_permissions": ["https://proyecta.utch.edu.mx/*"],
    "permissions": ["tabs", "storage", "activeTab", "notifications"]
}
